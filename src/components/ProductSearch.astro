<div class="product-search-container">
  <div class="search-wrapper">
    <div class="search-input-group">
      <input 
        type="text" 
        id="productSearchInput" 
        class="search-input" 
        placeholder="Buscar productos..."
        autocomplete="off"
      />
      <div class="search-icon">
        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
          <path d="M21 21L16.514 16.506L21 21ZM19 10.5C19 15.194 15.194 19 10.5 19C5.806 19 2 15.194 2 10.5C2 5.806 5.806 2 10.5 2C15.194 2 19 5.806 19 10.5Z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
        </svg>
      </div>
    </div>
    
    <div id="searchResults" class="search-results" style="display: none;">
      <div class="search-results-header">
        <span class="results-count">Resultados: <span id="resultsCount">0</span></span>
        <button id="closeSearch" class="close-search-btn">Ã—</button>
      </div>
      <div id="searchResultsList" class="search-results-list">
        <!-- Los resultados se insertarÃ¡n aquÃ­ dinÃ¡micamente -->
      </div>
    </div>
  </div>
</div>

<script src="/js/search.js" is:inline></script>

<style>
  /* Solo estilos bÃ¡sicos del contenedor - sin conflictos */
  .product-search-container {
    position: relative;
    width: 100%;
    max-width: 600px;
    margin: 0 auto 2rem auto;
    z-index: 100;
  }

  .search-wrapper {
    position: relative;
  }

  .search-input-group {
    position: relative;
    display: flex;
    align-items: center;
  }

  .search-input {
    width: 100%;
    padding: 1rem 3rem 1rem 1.5rem;
    border: 2px solid #e8e8e8;
    border-radius: 50px;
    font-size: 1rem;
    background: white;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
    transition: all 0.3s ease;
    outline: none;
    font-family: inherit;
  }

  .search-input:focus {
    border-color: var(--primary);
    box-shadow: 0 4px 16px rgba(224, 164, 206, 0.2);
    transform: translateY(-2px);
  }

  .search-input::placeholder {
    color: #999;
    font-style: italic;
  }

  .search-icon {
    position: absolute;
    right: 1.5rem;
    color: var(--primary);
    pointer-events: none;
  }

  .search-results {
    position: absolute;
    top: calc(100% + 0.5rem);
    left: 0;
    right: 0;
    background: white;
    border-radius: 12px;
    box-shadow: 0 8px 32px rgba(0, 0, 0, 0.15);
    border: 1px solid #e8e8e8;
    max-height: 400px;
    overflow-y: auto;
    opacity: 0;
    transform: translateY(-10px);
    transition: all 0.2s ease;
    z-index: 101;
  }

  .search-results-visible {
    opacity: 1;
    transform: translateY(0);
  }

  .search-results-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1rem 1.5rem;
    border-bottom: 1px solid #f0f0f0;
    background: #fafafa;
    border-radius: 12px 12px 0 0;
  }

  .results-count {
    font-size: 0.9rem;
    color: #666;
    font-weight: 500;
  }

  .close-search-btn {
    background: none;
    border: none;
    font-size: 1.5rem;
    color: #999;
    cursor: pointer;
    padding: 0;
    width: 24px;
    height: 24px;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 50%;
    transition: all 0.2s ease;
  }

  .close-search-btn:hover {
    background: #f0f0f0;
    color: #666;
  }

  .search-results-list {
    max-height: 320px;
    overflow-y: auto;
  }

  /* ðŸŽ¯ AJUSTES PARA MÃ“VIL - Z-INDEX REDUCIDO */
  @media (max-width: 767px) {
    .product-search-container {
      z-index: 50;
    }
    
    .search-results {
      z-index: 51;
    }
  }
</style>
